{
  "name": "Case Update",
  "description": "Triggers when a case is updated",
  "contributor": "Fabien Bloume, StrangeBee",
  "type": "filteredEvent",
  "status": "tested",
  "filter": {
    "_and": [
      {
        "_is": {
          "action": "update"
        }
      },
      {
        "_is": {
          "objectType": "Case"
        }
      }
    ]
  }
}
